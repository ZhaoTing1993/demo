<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.ting.spring.dynamicdatasourcedemo.dao.dynamic.ITestXmlDAO">
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache" />-->
    <!--<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>-->
    <update id="addMoney">
        UPDATE account
        SET money = money + #{1}
        WHERE user_id = #{0}
    </update>

    <update id="minusMoney">
        UPDATE account
        SET money = money - #{1}
        WHERE user_id = #{0}
    </update>


    <select id="getAccountByUserId" resultType="cn.ting.spring.dynamicdatasourcedemo.model.Account">

        SELECT
            id      AS id,
            user_id AS userId,
            money   AS money
        FROM account
        WHERE
            user_id = #{0}

    </select>
    <select id="getAccountById" parameterType="int"
            resultType="cn.ting.spring.dynamicdatasourcedemo.model.Account">

        SELECT
            id      AS id,
            user_id AS userId,
            money   AS money
        FROM account
        WHERE
            id = #{0}

    </select>
    <insert id="insertAccount" parameterType="cn.ting.spring.dynamicdatasourcedemo.model.Account"
            keyColumn="`id`" keyProperty="`id`" useGeneratedKeys="true">
        INSERT INTO account (user_id, money) VALUES (#{userId}, #{money})
    </insert>
</mapper>